@{
  Layout = "_Layout";
}

@using System.Security.Claims
@using SweetSavory.Models

<h2>Authentication with Identity</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
    <p>Hello @User.Identity.Name!</p>

    <h2>List of Pierre Sweet and Treat</h2>

    <h3>Flavors</h3>
    @if(@ViewBag.FlavorList.Count ==0)
      {
        <h5>We have not add any flavors</h5>
      }
      @foreach(Flavor flavor in @ViewBag.FlavorList)
      {
        <li>@flavor.Name</li>
      }
    
    <h3>Treats</h3>
      @if(@ViewBag.TreatList.Count ==0)
      {
        <h5>We have not add any treat</h5>
      }
      @foreach(Treat treat in @ViewBag.TreatList)
      {
        <li>@treat.Name</li>
      }
    
    <p>@Html.ActionLink("Add Flavors", "Create", "Flavors")</p>
    <p>@Html.ActionLink("Flavors list", "Index", "Flavors")</p>
    <p>@Html.ActionLink("Add Treats", "Create", "Treats")</p>
    <p>@Html.ActionLink("Treats list", "Index", "Treats")</p>
    
    @using (Html.BeginForm("LogOff", "Account"))
    {
      <input type="submit" class="btn btn-default" value="Log out" />
    }
}
else
{
    <p>@Html.ActionLink("Register", "Register")</p>
    <p>@Html.ActionLink("Log in", "Login")</p>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>

